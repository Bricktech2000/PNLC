# vim:tw=80:ft=pnlc:
# inc:../prelude.pnlc

.main .fix \main
  ...bind io:mnad getc ..vireo
    \chr
      # same implementation as Atto-8
      ..def '\r' \13u8 ..def sub \26u8
      ..def ..u8.sub 'a' ....lifta2 arr8:aptv or .' ' chr \idx
      ...bindk io:mnad
        ...islt ...compare u8:ord 13u8 idx
          .putc ..u8.add 13u8 chr
          ...islt ...compare u8:ord 26u8 idx
            .putc ..u8.sub 13u8 chr
            .putc chr
        main
    ..pure io:aptv unit
